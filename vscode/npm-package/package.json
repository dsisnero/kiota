{
  "name": "@microsoft/kiota",
  "version": "1.0.0",
  "description": "npm package exposing Kiota CLI functionality to TypeScript",
  "repository": {
    "url": "https://github.com/microsoft/kiota.git",
    "type": "git"
  },
  "directories": {
    "lib": "lib",
    "test": "tests"
  },
  "main": "dist/esm/index.js",
  "module": "dist/esm/index.js",
  "exports": {
    "import": "./dist/esm/index.js",
    "require": "./dist/cjs/index.js"
  },
  "types": "dist/esm/types/index.d.ts",
  "scripts": {
    "lint": "eslint",
    "test": "jest",
    "build": "npm run clean && npm run build:esm && npm run build:cjs && npm run copy-files",
    "build:esm": "tsc --project tsconfig.esm.json",
    "build:cjs": "tsc --project tsconfig.cjs.json",
    "clean": "rimraf dist",
    "copy-files": "cpx runtime.json dist/esm && cpx runtime.json dist/esm && cpx runtime.json dist/cjs && cpx package.json dist/cjs && cpx package.json dist/esm",
    "test:coverage": "jest --coverage",
    "prepack": "npm run build",
    "package": "npm pack"
  },
  "keywords": [
    "Kiota"
  ],
  "author": "Microsoft",
  "license": "MIT",
  "dependencies": {
    "adm-zip": "^0.5.16",
    "appdata-path": "^1.0.0",
    "follow-redirects": "^1.15.9",
    "original-fs": "^1.2.0",
    "vscode-jsonrpc": "^8.2.1"
  },
  "devDependencies": {
    "@types/adm-zip": "^0.5.7",
    "@types/follow-redirects": "^1.14.4",
    "@types/jest": "^29.5.14",
    "cpx": "^1.5.0",
    "jest": "^29.7.0",
    "ts-jest": "^29.2.6",
    "ts-loader": "^9.5.2"
  },
  "files": [
    "runtime.json"
  ]
}
